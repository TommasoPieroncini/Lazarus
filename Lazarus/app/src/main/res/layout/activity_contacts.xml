<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.lazarus.app.lazarus.Contacts">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@drawable/lazarus_logo_resized_small"
        android:id="@+id/logo_contacts"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:id="@+id/contact1"
        android:layout_width="300dp"
        android:textColor="#7FD6FF"
        android:textColorHint="#ffffff"
        android:editable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:backgroundTint="#7FD6FF"
        android:textColorLink="#7FD6FF"
        android:textColorHighlight="#7FD6FF"
        android:layout_below="@+id/logo_contacts"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/contact2"
        android:layout_width="300dp"
        android:layout_below="@+id/contact1"
        android:layout_alignLeft="@+id/contact1"
        android:layout_alignStart="@+id/contact1"
        android:hint="Your contact"
        android:textColor="#7FD6FF"
        android:textColorHint="#ffffff"
        android:backgroundTint="#7FD6FF"
        android:textColorLink="#7FD6FF"
        android:textColorHighlight="#7FD6FF" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/contact3"
        android:layout_width="300dp"
        android:layout_below="@+id/contact2"
        android:layout_alignLeft="@+id/contact2"
        android:layout_alignStart="@+id/contact2"
        android:hint="Your contact"
        android:textColor="#7FD6FF"
        android:textColorHint="#ffffff"
        android:backgroundTint="#7FD6FF"
        android:textColorLink="#7FD6FF"
        android:textColorHighlight="#7FD6FF" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/contact4"
        android:layout_width="300dp"
        android:layout_below="@+id/contact3"
        android:layout_alignLeft="@+id/contact3"
        android:layout_alignStart="@+id/contact3"
        android:hint="Your contact"
        android:textColor="#7FD6FF"
        android:textColorHint="#ffffff"
        android:backgroundTint="#7FD6FF"
        android:textColorLink="#7FD6FF"
        android:textColorHighlight="#7FD6FF" />

    <Button
        android:text="DONE"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/done_contacts"
        android:background="#004DE6"
        android:textColor="#ffffff"
        android:textSize="30dp" />
</RelativeLayout>
